<!-- CONTACT FORM + ANGULARJS-->
<div class="container">
<div class="col-md-4"></div>
  <div class="col-md-4">
      <form name="myForm" class="form-signin" role="form" action="/send?form=contact" method="POST" ng-controller="contactCtrl">

        <h2 class="form-signin-heading">Contact Us</h2>

        <label for="inputEmail" class="sr-only">Email address</label>
        <p>Email:
          <span data-ng-bind="email"></span>
        </p>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" ng-model="email" required autofocus>

        <p role="alert">
          <span class="error" ng-show="myForm.email.$error.required">Required!</span>
          <span class="error" ng-show="myForm.email.$error.email">Not valid email!</span>
        </p>
        

        <label for="inputSubject" class="sr-only">Subject</label>
        <p>Subject:
          <span data-ng-bind="sbj.text"></span>
        </p>
        <input type="text" id="inputSubject" class="form-control" name="subj" placeholder="Subject" ng-model="sbj.text" ng-pattern="sbj.word" ng-trim="false" ng-minlength="2" required>

        <p role="alert">
          <span class="error" ng-show="myForm.subj.$error.required">Required!</span>
          <span class="error" ng-show="myForm.subj.$error.pattern">Single word only!</span>
          <span class="error" ng-show="myForm.subj.$dirty && myForm.subj.$error.minlength">Must be a minimum of 2 characters</span>
        </p>


        <label for="inputMsg" class="sr-only">Message</label>
        <textarea id="inputMsg" class="form-control" name="msg" placeholder="Your message" ng-model="msg" ng-minlength="5" required></textarea>

        <p role="alert">
          <span class="error" ng-show="myForm.msg.$error.required">Required!</span>
          <span class="error" ng-show="myForm.msg.$dirty && myForm.msg.$error.minlength">Must be a minimum of 5 characters</span>
        </p>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <div class="checkbox">
          <label>
            <input type="checkbox" name="check" value="copy" ng-model="check" ng-true-value="'copy'" ng-false-value="'nocopy'"> Send me a copy of message
          </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block btn-clr" name="submit" type="submit">Send</button>
      </form>
  </div>
  <div class="col-md-4"></div>
</div> <br><!-- /END CONTACT FORM -->