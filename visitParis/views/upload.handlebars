<div class="container">
<div class="col-md-4"></div>
  <div class="col-md-4">
      <form class="form-signin" role="form" action="/upload/{year}/{month}" enctype="multipart/form-data" method="POST">
        <h2 class="form-signin-heading">Share your memories!</h2>
        <label for="inputName" class="sr-only">Name</label>
        <input type="text" id="inputName" class="form-control" placeholder="Name" name="name" required autofocus>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" required autofocus>
        <label for="inputPhoto" class="sr-only">Photo</label>
        <input type="file" id="inputPhoto" class="form-control" name="photo" accept="image/*" required>
        <button class="btn btn-lg btn-primary btn-block btn-clr" name="submit" type="submit">Submit</button>
      </form>
  </div>
  <div class="col-md-4"></div>
